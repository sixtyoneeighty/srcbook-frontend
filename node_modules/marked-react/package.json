{
  "name": "marked-react",
  "description": "Render Markdown as React components",
  "version": "2.0.0",
  "type": "module",
  "author": "sibiraj-s",
  "license": "MIT",
  "repository": "https://github.com/sibiraj-s/marked-react.git",
  "bugs": "https://github.com/sibiraj-s/marked-react/issues",
  "homepage": "https://github.com/sibiraj-s/marked-react#readme",
  "main": "./dist/marked-react.cjs",
  "module": "./dist/marked-react.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/marked-react.cjs",
      "import": "./dist/marked-react.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "keywords": [
    "react",
    "markdown",
    "marked",
    "markedjs",
    "no dangerouslySetInnerHTML"
  ],
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx",
    "build": "rollup -c",
    "dev": "storybook dev -p 7007",
    "build:storybook": "storybook build",
    "test": "vitest --coverage",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "is-ci || (npm run build && publint)"
  },
  "peerDependencies": {
    "react": "^16.8.0 || >=17.0.0"
  },
  "dependencies": {
    "marked": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@storybook/addon-essentials": "^7.2.0",
    "@storybook/manager-api": "^7.2.0",
    "@storybook/react": "^7.2.0",
    "@storybook/react-vite": "^7.2.0",
    "@storybook/theming": "^7.2.0",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@vitest/coverage-v8": "^0.34.1",
    "commitlint-config-non-conventional": "^1.0.1",
    "eslint": "^8.46.0",
    "eslint-config-pegasus": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.13",
    "highlight.js": "^11.8.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "13.2.3",
    "prettier": "^3.0.0",
    "publint": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-lowlight": "^3.0.0",
    "rollup": "^3.27.0",
    "storybook": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  }
}
